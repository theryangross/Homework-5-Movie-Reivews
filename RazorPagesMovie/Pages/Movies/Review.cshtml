@page "{id:int?}"
@model RazorPagesMovie.Pages_Movies.ReviewModel

@{
    ViewData["Title"] = "Reviews";
}

<h1>Create</h1>

    <h4>Review</h4>
    <hr />
    <p>Movie</p>
        <div class ="row">
            <div class ="col-md-4">    
                <Form method= "post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <select asp-items = "Model.MoviesDropDown" class ="form-control">
                    <option value ="">-- Select Movie --</option>
                    </select>
                    <div class= "form-group">
                        <label asp-for="Review.Score" class ="control-label"></label>
                        <input asp-for="Review.Score" class ="form-control"/>
                        <span asp-validation-for="Review.Score" class ="text-danger"></span>
                    </div>
                <div class ="form-group">
                    <p>Score</p>
                    <input type = "submit" value = "Add Review" class="btn btn-primary"/>
                </div>
            </Form>
        </div>
    </div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}